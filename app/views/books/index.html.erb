<p id="notice"><%= notice %></p>
<%= link_to 'Añadir libro', new_book_path %>
<h1>Libros</h1>

<%= search_form_for @q do |f|%>
    <div>
        <%= f.label :status_eq, 'Status' %>
        <%= f.select :status_eq, options_for_select(Book.statuses , @q.status_eq), {}, {class: 'form-control'} %>
    </div>
    <%= f.submit 'Search' %>
<% end %>


<table>
  <thead>
    <tr>
      <th><%= sort_link(@q, :title)%></th>
      <th>Autor</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.status %></td>
        <td><%= link_to 'Ver', book %></td>
        <td><%= link_to 'Cambiar Estado', edit_book_path(book) %></td>
        <td><%= link_to 'Eliminar', book, method: :delete, data: { confirm: 'Estás Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


